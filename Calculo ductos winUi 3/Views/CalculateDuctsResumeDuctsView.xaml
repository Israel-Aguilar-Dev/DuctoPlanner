<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Calculo_ductos_winUi_3.Views.CalculateDuctsResumeDuctsView"
    x:Name="Root"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculo_ductos_winUi_3.Views"
    xmlns:localState="using:Calculo_ductos_winUi_3.ViewModels"
    xmlns:model="using:Calculo_ductos_winUi_3.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>

    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" >
            <Grid.RowDefinitions>
                <!--<RowDefinition Height="Auto"></RowDefinition>-->
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <!--<TextBlock 
            Text="Resumen de niveles" 
            Margin="16,16,16,0" 
            HorizontalAlignment="Center"
            Style="{StaticResource SubtitleTextBlockStyle}"
            Grid.Row="0"/>-->
            <Grid 
            CornerRadius="8"
            Margin="16,16,36,36"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid x:Name="Titles" Margin="0,0,0,5" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                        <ColumnDefinition Width="3*"></ColumnDefinition>
                        <ColumnDefinition Width="3*"></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                        <ColumnDefinition Width="3*"></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock Tag="0" Grid.Column="0" TextWrapping="Wrap" Padding="6" Margin="10" TextAlignment="Center" VerticalAlignment="Center">Tipo de nivel</TextBlock>
                    <TextBlock Tag="0" Grid.Column="1" TextWrapping="Wrap" Padding="6" Margin="10" TextAlignment="Center" VerticalAlignment="Center">Número de niveles</TextBlock>
                    <TextBlock Tag="0" Grid.Column="2" TextWrapping="Wrap" Padding="6" Margin="10" TextAlignment="Center" VerticalAlignment="Center">Altura</TextBlock>
                    <TextBlock Tag="0" Grid.Column="3" TextWrapping="Wrap" Padding="6" Margin="10" TextAlignment="Center" VerticalAlignment="Center">Necesita puerta</TextBlock>
                    <TextBlock Tag="0" Grid.Column="4" TextWrapping="Wrap" Padding="6" Margin="10" TextAlignment="Center" VerticalAlignment="Center">Tipo de puerta</TextBlock>
                    <TextBlock Tag="0" Grid.Column="5" TextWrapping="Wrap" Padding="6" Margin="10" TextAlignment="Center" VerticalAlignment="Center">Tipo de descarga</TextBlock>
                    <TextBlock Tag="0" Grid.Column="6" TextWrapping="Wrap" Padding="6" Margin="10" TextAlignment="Center" VerticalAlignment="Center">Necesita antiimpactos</TextBlock>
                    <TextBlock Tag="0" Grid.Column="7" TextWrapping="Wrap" Padding="6" Margin="10" TextAlignment="Center" VerticalAlignment="Center">Tipo de ventilación</TextBlock>
                    <TextBlock Tag="0" Grid.Column="8" TextWrapping="Wrap" Padding="6" Margin="10" TextAlignment="Center" VerticalAlignment="Center">Eliminar</TextBlock>
                    <Path 
                    Tag="0"
                    Stroke="Gray"
                    StrokeThickness="0.5"
                    Data="M 0,0 L 1,0" 
                    Grid.ColumnSpan="9"
                    Margin="16,0,16,0"
                    Grid.Row="0"
                    Stretch="Fill" 
                    VerticalAlignment="Bottom"/>
                </Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">

                    <ItemsControl x:Name="MyTable" ItemsSource="{x:Bind stateApp.FloorVM.FloorList, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="model:FloorDescription">
                                <Grid >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"></ColumnDefinition>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                        <ColumnDefinition Width="3*"></ColumnDefinition>
                                        <ColumnDefinition Width="3*"></ColumnDefinition>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                        <ColumnDefinition Width="3*"></ColumnDefinition>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" TextWrapping="Wrap" Text="{x:Bind Description}" TextAlignment="Center" Padding="10" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" TextWrapping="Wrap" Text="{x:Bind FloorCount}" TextAlignment="Center" Padding="10" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" TextWrapping="Wrap" Text="{x:Bind FloorHeight}" TextAlignment="Center" Padding="10" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="3" TextWrapping="Wrap" Text="{x:Bind NeedGateString}" TextAlignment="Center" Padding="10" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="4" TextWrapping="Wrap" Text="{x:Bind DoorTypeString}" TextAlignment="Center" Padding="10" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="5" TextWrapping="Wrap" Text="{x:Bind DischargeString}" TextAlignment="Center" Padding="10" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="6" TextWrapping="Wrap" Text="{x:Bind NeedAntiImpactString}" TextAlignment="Center" Padding="10" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="7" TextWrapping="Wrap" Text="{x:Bind NeedChimmeyString}" TextAlignment="Center" Padding="10" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <Button Grid.Column="8"
                                    Content="Eliminar"
                                    VerticalAlignment="Center" HorizontalAlignment="Center"
                                    Command="{Binding DataContext.FloorVM.RemoveFloorCommand, ElementName=Root}"
                                    CommandParameter="{x:Bind Uuid}" />
                                    <Path 
                                    Tag="0"
                                    Stroke="Gray"
                                    StrokeThickness="0.5"
                                    Data="M 0,0 L 1,0" 
                                    Grid.ColumnSpan="7"
                                    Margin="16,0,16,0"
                                    Grid.Row="0"
                                    Stretch="Fill" 
                                    VerticalAlignment="Bottom"
                                    StrokeDashArray="8,12" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </ScrollViewer>
            </Grid>

        </Grid>

    </Grid>
</Page>
