<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Calculo_ductos_winUi_3.Views.CalculateManPowerSubPageMO"
    x:Name="RootMP"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculo_ductos_winUi_3.Views"
    xmlns:localState="using:Calculo_ductos_winUi_3.ViewModels"
    xmlns:model="using:Calculo_ductos_winUi_3.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock 
            Grid.Row="0" 
            Text="Jornadas efectivas" 
            HorizontalAlignment="Center"
            Margin="0,0,32,0"
            Style="{StaticResource SubtitleTextBlockStyle}"></TextBlock>
        <Grid 
            Grid.Row="1"
            Margin="0,16,0,0"
            CornerRadius="8"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid x:Name="TopTable" 
                          BorderBrush="Gray" 
                          BorderThickness="1"
                          CornerRadius="8" 
                          Grid.Row="0" 
                          Margin="32,16,32,16"
                          Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid x:Name="Header" Margin="0,0,16,0" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Recurso" HorizontalAlignment="Center" TextWrapping="Wrap" Margin="8" ></TextBlock>
                    <TextBlock Grid.Column="1" Text="Tipo" HorizontalAlignment="Center" TextWrapping="Wrap" Margin="8"></TextBlock>
                    <TextBlock Grid.Column="2" Text="Costo por jornada" HorizontalAlignment="Center" TextWrapping="Wrap" Margin="8"></TextBlock>
                    <TextBlock Grid.Column="3" Text="Número de jornadas efectivas" HorizontalAlignment="Center" TextWrapping="Wrap" Margin="8"></TextBlock>
                    <TextBlock Grid.Column="4" Text="Días no laborales" HorizontalAlignment="Center" TextWrapping="Wrap" Margin="8"></TextBlock>
                    <TextBlock Grid.Column="5" Text="Total para pago" HorizontalAlignment="Center" TextWrapping="Wrap" Margin="8"></TextBlock>
                    <Path 
                            Grid.ColumnSpan="7" 
                            StrokeThickness="1" 
                            Stroke="Gray" 
                            Data="M 0,0 L 1,0"  
                            Margin="16,58,0,0"
                            Stretch="Fill"
                            Grid.Row="0"></Path>
                </Grid>
                <ScrollViewer Grid.Row="1">
                    <ItemsControl x:Name="MyTable" ItemsSource="{x:Bind stateApp.ManPowerVM.ManPower, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="model:HumanResourceModel">
                                <Grid x:Name="Body">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"></ColumnDefinition>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" TextWrapping="Wrap" Text="{x:Bind Recurso.Description}" TextAlignment="Center" Padding="10" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" TextWrapping="Wrap" Text="{x:Bind TipoRecurso.Description}" TextAlignment="Center" Padding="10" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" TextWrapping="Wrap" Text="{x:Bind Recurso.SalaryPerWorkday}" TextAlignment="Center" Padding="10" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="3" TextWrapping="Wrap" Text="{x:Bind JornadasEfectivas}" TextAlignment="Center" Padding="10" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="4" TextWrapping="Wrap" Text="{x:Bind DiasNoLaborales}" TextAlignment="Center" Padding="10" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="5" TextWrapping="Wrap" Text="{x:Bind JornadasEfectivas}" TextAlignment="Center" Padding="10" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <Button Grid.Column="8"
                                        Content="Eliminar"
                                        VerticalAlignment="Center" HorizontalAlignment="Center"
                                        Command="{Binding DataContext.ManPowerVM.RemoveResourceCommand, ElementName=RootMP}"
                                        CommandParameter="{x:Bind Uuid}" />
                                    <Path 
                                        Tag="0"
                                        Stroke="Gray"
                                        StrokeThickness="0.5"
                                        Data="M 0,0 L 1,0" 
                                        Grid.ColumnSpan="7"
                                        Margin="16,0,16,0"
                                        Grid.Row="0"
                                        Stretch="Fill" 
                                        VerticalAlignment="Bottom"
                                        StrokeDashArray="8,12" />       
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid x:Name="DownTable"
                       BorderBrush="Gray" 
                         BorderThickness="1"
                         CornerRadius="8" 
                         Grid.Column="1" 
                         Margin="32,16,32,16"
                         Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid x:Name="DTHeader" Margin="16" Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"></ColumnDefinition>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Recurso" Grid.Column="0" HorizontalAlignment="Center"></TextBlock>
                        <TextBlock Text="Costo" Grid.Column="1" HorizontalAlignment="Center"></TextBlock>
                    </Grid>
                    <ScrollViewer Grid.Row="1">
                        <ItemsControl  ItemsSource="{x:Bind stateApp.ManPowerVM.Subtotals, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="model:SubtotalHumaResource">
                                    <Grid x:Name="Body">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"></ColumnDefinition>
                                            <ColumnDefinition Width="2*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" TextWrapping="Wrap" Text="{x:Bind Descripcion}" TextAlignment="Center" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" TextWrapping="Wrap" Text="{x:Bind Subtotal}" TextAlignment="Center" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    <Path 
                        Tag="0"
                        Stroke="Gray"
                        StrokeThickness="0.75"
                        Data="M 0,0 L 1,0" 
                        Grid.ColumnSpan="7"
                        Margin="24,16,24,0"
                        Grid.Row="2"
                        Stretch="Fill" 
                        VerticalAlignment="Top" />
                    <Grid x:Name="Total" Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"></ColumnDefinition>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Total" 
                                   Grid.Column="0" 
                                   Margin="5" 
                                   Style="{StaticResource BodyStrongTextBlockStyle}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"></TextBlock>
                        <TextBlock Text="{x:Bind stateApp.ManPowerVM.TotalPriceManPower, Mode=OneWay}" 
                                   Grid.Column="1" 
                                   Margin="5" 
                                   Style="{StaticResource BodyStrongTextBlockStyle}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"></TextBlock>
                    </Grid>


                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
