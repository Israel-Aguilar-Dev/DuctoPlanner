<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Calculo_ductos_winUi_3.Views.CalculateDuctsView"
    x:Name="Root"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculo_ductos_winUi_3.Views"
    xmlns:localState="using:Calculo_ductos_winUi_3.ViewModels"
    xmlns:model="using:Calculo_ductos_winUi_3.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <!--<Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#AACA48"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="#AACA48"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="#AACA48"/>
        </Style>-->
        
    </Page.Resources>
    
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock 
            Text="Ducto Planner" 
            Style="{StaticResource TitleTextBlockStyle}"
            Padding="36,40,36,0"
            Grid.Row="0"
            Grid.ColumnSpan="2"/>
        <StackPanel 
            Orientation="Vertical"
            Grid.Row="1" 
            Grid.Column="0" CornerRadius="8" Margin="36,36,16,36"
Background="white">
            <TextBlock 
                Text="Datos" 
                Margin="16,12,16,0" 
                HorizontalAlignment="Center"
                Style="{StaticResource SubtitleTextBlockStyle}"/>

            <Grid
                x:Name="DataCard"
                Height="Auto"
                VerticalAlignment="Center"
                Margin="16,16,16,36"
                CornerRadius="8" 
                Background="White"
                >        
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel 
                    Orientation="Vertical" 
                    Grid.Column="0" 
                    Grid.Row="0" 
                    Grid.ColumnSpan="2"
                    Margin="8"
                    Height="Auto">
                    <TextBlock x:Name="lblNumero" Margin="0,0,0,8" >Numero de niveles</TextBlock>
                    <TextBox 
                        x:Name="txtNumeroPisos" 
                        Text="{x:Bind stateApp.FloorVM.FloorCountText, Mode=TwoWay}"
                        Height="30"></TextBox>
                </StackPanel>
                <StackPanel 
                    Orientation="Vertical" 
                    Grid.Column="0" 
                    Grid.Row="1" 
                    Grid.ColumnSpan="2"
                    Margin="8"
                    Height="Auto">
                    <TextBlock x:Name="lblAltura" Margin="0,0,0,8" >Altura</TextBlock>
                    <TextBox 
                        x:Name="txtAltura" 
                        Text="{x:Bind stateApp.FloorVM.FloorHeightText, Mode=TwoWay}"
                        Height="30" ></TextBox>
                </StackPanel>
                <StackPanel 
                    Orientation="Vertical" 
                    Grid.Column="0" 
                    Grid.Row="2" 
                    Grid.ColumnSpan="2"
                    Margin="8"
                    Height="Auto">
                    <TextBlock x:Name="lblTipo" Margin="0,0,0,8">Tipo de nivel</TextBlock>
                    <ComboBox 
                        x:Name="cbxTipo" 
                        Height="30" 
                        SelectedIndex="{x:Bind stateApp.FloorVM.TypeDuctIndex, Mode=TwoWay}"
                        SelectionChanged="CbxTipo_SelectionChanged" >
                        <ComboBoxItem>Descarga</ComboBoxItem>
                        <ComboBoxItem >Normal</ComboBoxItem>
                        <ComboBoxItem>Ventilacion</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
                <StackPanel 
                    Orientation="Vertical" 
                    Grid.Column="0" 
                    Grid.Row="3" 
                    Grid.ColumnSpan="2"
                    Margin="8"
                    Height="Auto">
                    <TextBlock x:Name="lblCompuerta" Margin="0,0,0,8">Necesitan puerta</TextBlock>
                    <ComboBox x:Name="cbxCompuerta" 
                              SelectedIndex="{x:Bind stateApp.FloorVM.NeedGateIndex, Mode=TwoWay}">
                        <ComboBoxItem>Si</ComboBoxItem>
                        <ComboBoxItem>No</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
                <StackPanel 
                    Orientation="Vertical" 
                    Grid.Column="0" 
                    Grid.Row="4" 
                    Grid.ColumnSpan="2"
                    Margin="10"
                    Height="Auto">
                    <!--<TextBlock x:Name="lblChimenea">Necesita chimenea</TextBlock>-->
                    <TextBlock x:Name="lblChimenea" Margin="0,0,0,8">Tipo de ventilación</TextBlock>
                    <!--<ComboBox x:Name="cbxChimenea">
                        <ComboBoxItem>Si</ComboBoxItem>
                        <ComboBoxItem >No</ComboBoxItem>
                    </ComboBox>-->
                    <ComboBox x:Name="cbxChimenea"
                              SelectedIndex="{x:Bind stateApp.FloorVM.NeedChimmeyIndex, Mode=TwoWay}">
                        <ComboBoxItem>Chimenea</ComboBoxItem>
                        <ComboBoxItem >Cuello de ganso</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
                <StackPanel 
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Grid.Column="0" 
                    Grid.Row="5" 
                    Grid.ColumnSpan="2"
                    Margin="8"
                    Height="Auto">
                    <Button x:Name="btnAgregar" Margin="0,0,12,0" Command="{x:Bind stateApp.FloorVM.AddFloorCommand}">Agregar</Button>
                    <!--<Button x:Name="prueba" Click="FlipCard" Margin="0,0,8,0">prueba</Button>-->
                    <Button x:Name="btnCalcular" Click="{x:Bind stateApp.CalculateDucts}" Margin="12,0,0,0">Calcular</Button>
                </StackPanel>


            </Grid>
        </StackPanel>
        <Grid
            Grid.Row="1" 
            Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"></RowDefinition>
                <RowDefinition Height="4*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid
                Grid.Row="0" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock 
                    Text="Resumen de niveles" 
                    Margin="16,16,16,0" 
                    HorizontalAlignment="Center"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    Grid.Row="0"/>
                <Grid Grid.Row="1"
                    CornerRadius="8"
                    Margin="16,16,36,0"
                    Background="White" 
                    VerticalAlignment="Top"
                    Height="225">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid x:Name="Titles" Margin="0,0,0,5" Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Tag="0" Grid.Column="0" Padding="6" Margin="10" TextAlignment="Center">Tipo de nivel</TextBlock>
                        <TextBlock Tag="0" Grid.Column="1" Padding="6" Margin="10" TextAlignment="Center">Cantidad de niveles</TextBlock>
                        <TextBlock Tag="0" Grid.Column="2" Padding="6" Margin="10" TextAlignment="Center">Altura</TextBlock>
                        <TextBlock Tag="0" Grid.Column="3" Padding="6" Margin="10" TextAlignment="Center">Necesita puerta</TextBlock>
                        <TextBlock Tag="0" Grid.Column="4" Padding="6" Margin="10" TextAlignment="Center">Tipo de ventilación</TextBlock>
                        <TextBlock Tag="0" Grid.Column="5" Padding="6" Margin="10" TextAlignment="Center">Eliminar</TextBlock>
                        <Path 
                            Tag="0"
                            Stroke="Gray"
                            StrokeThickness="0.5"
                            Data="M 0,0 L 1,0" 
                            Grid.ColumnSpan="6"
                            Margin="36,0,36,0"
                            Grid.Row="0"
                            Stretch="Fill" 
                            VerticalAlignment="Bottom"/>        
                    </Grid>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">

                        <ItemsControl x:Name="MyTable" ItemsSource="{x:Bind stateApp.FloorVM.FloorList, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="model:FloorDescription">
                                    <Grid >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{x:Bind Description}" TextAlignment="Center" Padding="10" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{x:Bind FloorCount}" TextAlignment="Center" Padding="10" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="{x:Bind FloorHeight}" TextAlignment="Center" Padding="10" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="{x:Bind NeedGateString}" TextAlignment="Center" Padding="10" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="4" Text="{x:Bind NeedChimmeyString}" TextAlignment="Center" Padding="10" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <Button Grid.Column="5"
                                            Content="Eliminar"
                                            VerticalAlignment="Center" HorizontalAlignment="Center"
                                            Command="{Binding DataContext.FloorVM.RemoveFloorCommand, ElementName=Root}"
                                            CommandParameter="{x:Bind Uuid}" />
                                        <Path 
                                            Tag="0"
                                            Stroke="Gray"
                                            StrokeThickness="0.5"
                                            Data="M 0,0 L 1,0" 
                                            Grid.ColumnSpan="6"
                                            Margin="36,0,36,0"
                                            Grid.Row="0"
                                            Stretch="Fill" 
                                            VerticalAlignment="Bottom"
                                            StrokeDashArray="8,12" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </ScrollViewer>
                </Grid>
                
            </Grid>
            <Grid
                Grid.Row="1" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock 
                    Text="Despiece" 
                    Margin="36,36,36,0" 
                    HorizontalAlignment="Center"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    Grid.Row="0"/>
                <Grid
                    CornerRadius="8"
                    Margin="16,16,36,36"
                    Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid x:Name="leftCardContainer"
                        Grid.Column="0"
                        Grid.Row="1"
                        >
                        <!-- Frente de la tarjeta -->
                        <Grid x:Name="FrontCard" 
                            Background="white"
                            CornerRadius="8"
                            Margin="0,0,8,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <TextBlock 
                                Text="Ductos" 
                                Margin="36,16,36,0" 
                                HorizontalAlignment="Center"
                                Grid.Row="0"
                                Grid.ColumnSpan="2"
                                Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <Button
                                x:Name="DetailDuctByFloor"
                                HorizontalAlignment="Right"
                                Grid.Row="0"
                                Grid.ColumnSpan="2"
                                Margin="0,16,36,0" 
                                Background="white"
                                Click="FlipCard">
                                <!--Detalles-->
                                <FontIcon Glyph="&#xE8AB;" />
                            </Button>
                            <Grid Grid.Row="1" Grid.ColumnSpan="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <!-- Títulos -->
                                    <RowDefinition Height="*"/>
                                    <!-- Scrollable content -->
                                </Grid.RowDefinitions>

                                <!-- TITULOS FIJOS -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Padding="6" Margin="10" TextAlignment="Center" Text="Tipo de Ducto"/>
                                    <TextBlock Grid.Column="1" Padding="6" Margin="10" TextAlignment="Center" Text="Cantidad"/>
                                    <Path 
                                        Stroke="Gray"
                                        StrokeThickness="0.5"
                                        Data="M 0,0 L 1,0" 
                                        Grid.ColumnSpan="2"
                                        Margin="36,0,36,0"
                                        Stretch="Fill" 
                                        VerticalAlignment="Bottom"/>
                                </Grid>

                                <!-- SCROLL SOLO PARA DATOS -->
                                <ScrollViewer Grid.Row="1"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled"
                                      CornerRadius="8"
                                      Margin="16,0,16,16">
                                    <ItemsControl ItemsSource="{x:Bind stateApp.DuctsVM.DucList, Mode=OneWay}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="model:DuctModel">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Padding="6" Margin="10" TextAlignment="Center" Text="{x:Bind TypeString}"/>
                                                    <TextBlock Grid.Column="1" Padding="6" Margin="10" TextAlignment="Center" Text="{x:Bind Count}"/>
                                                    <Path 
                                                        Stroke="Gray"
                                                        StrokeThickness="0.5"
                                                        Data="M 0,0 L 1,0" 
                                                        Grid.ColumnSpan="2"
                                                        Margin="36,0,36,0"
                                                        Stretch="Fill" 
                                                        VerticalAlignment="Bottom"
                                                        StrokeDashArray="8,12"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                        </Grid>
                        <!-- Reverso de la tarjeta -->
                        <Grid x:Name="BackCard" 
                            Background="white" 
                            CornerRadius="8"
                            Margin="0,0,8,0"
                            Visibility="Collapsed" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <TextBlock 
                                Text="Ductos por piso" 
                                Margin="36,16,36,0" 
                                HorizontalAlignment="Center"
                                Grid.Row="0"
                                Grid.ColumnSpan="2"
                                Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <Button
                                x:Name="DuctsResume"
                                HorizontalAlignment="Right"
                                Grid.Row="0"
                                Grid.ColumnSpan="2"
                                Margin="0,16,36,0" 
                                VerticalContentAlignment="Top"
                                BorderThickness="0"
                                Background="white"
                                Click="FlipCard">
                                <!--Resumen-->
                                <FontIcon Glyph="&#xE8AB;" />
                            </Button>
                            <Grid CornerRadius="8"
                                Margin="16,0,16,16"
                                Grid.Row="1"
                                Grid.ColumnSpan="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid
                                    x:Name="DuctsByFloorTable"
                                    VerticalAlignment="Top"
                                    CornerRadius="8"
                                    Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <TextBlock Tag="0" Grid.Column="0" Padding="6" Margin="6" TextAlignment="Center">Piso</TextBlock>
                                    <TextBlock Tag="0" Grid.Column="1" Padding="6" Margin="6" TextAlignment="Center">Tipo de ducto</TextBlock>
                                    <TextBlock Tag="0" Grid.Column="2" Padding="6" Margin="6" TextAlignment="Center">Cantidad</TextBlock>
                                    <Path 
                                        Stroke="Gray"
                                        StrokeThickness="0.5"
                                        Data="M 0,0 L 1,0" 
                                        Grid.ColumnSpan="3"
                                        Margin="36,0,36,0"
                                        Stretch="Fill" 
                                        VerticalAlignment="Bottom"/>
                                </Grid>
                                <ScrollViewer
                                    VerticalScrollBarVisibility="Auto"
                                    HorizontalScrollBarVisibility="Disabled"
                                    Grid.Row="1">
                                    <ItemsControl ItemsSource="{x:Bind stateApp.DuctsVM.DuctDetailList, Mode=OneWay}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="model:FloorDuctDetailModel">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition></ColumnDefinition>
                                                        <ColumnDefinition></ColumnDefinition>
                                                        <ColumnDefinition></ColumnDefinition>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Tag="0" Grid.Column="0" Padding="6" Margin="6" TextAlignment="Center" Text="{x:Bind FloorName}"></TextBlock>
                                                    <TextBlock Tag="0" Grid.Column="1" Padding="6" Margin="6" TextAlignment="Center" Text="{x:Bind DuctType}"></TextBlock>
                                                    <TextBlock Tag="0" Grid.Column="2" Padding="6" Margin="6" TextAlignment="Center" Text="{x:Bind Count}"></TextBlock>
                                                    <Path 
                                                        Stroke="Gray"
                                                        StrokeThickness="0.5"
                                                        Data="M 0,0 L 1,0" 
                                                        Grid.ColumnSpan="3"
                                                        Margin="36,0,36,0"
                                                        Stretch="Fill" 
                                                        VerticalAlignment="Bottom"
                                                        StrokeDashArray="8,12"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                            
                        </Grid>
                    </Grid>
                    <Grid x:Name="rigthCardContainer"
                        Grid.Column="1"
                        Grid.Row="1"
                        CornerRadius="8"
                        Margin="8,0,0,0"
                        Background="White">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock 
                            Text="Componentes" 
                            Margin="36,16,36,0" 
                            HorizontalAlignment="Center"
                            Grid.Row="0"
                            Grid.ColumnSpan="2"
                            Style="{StaticResource BodyStrongTextBlockStyle}"/>
                        <Grid CornerRadius="8"
                            Margin="16,0,16,16"
                            Grid.Row="1"
                            Grid.ColumnSpan="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid
                                x:Name="ComponentTableTitles"
                                VerticalAlignment="Top"
                                CornerRadius="8"
                                Grid.Row="0">               
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <TextBlock Tag="0" Grid.Column="0" Padding="6" Margin="10" TextAlignment="Center">Nombre</TextBlock>
                                <TextBlock Tag="0" Grid.Column="1" Padding="6" Margin="10" TextAlignment="Center">Cantidad</TextBlock>
                                <Path 
                                    Stroke="Gray"
                                    StrokeThickness="0.5"
                                    Data="M 0,0 L 1,0" 
                                    Grid.ColumnSpan="2"
                                    Margin="36,0,36,0"
                                    Stretch="Fill" 
                                    VerticalAlignment="Bottom"/>
                            </Grid>
                            <ScrollViewer
                                VerticalScrollBarVisibility="Auto"
                                HorizontalScrollBarVisibility="Disabled"
                                Grid.Row="1">
                                <ItemsControl ItemsSource="{x:Bind stateApp.ComponentsVM.ComponentList, Mode=OneWay}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="model:ComponentModel">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Tag="0" Grid.Column="0" Padding="6" Margin="6" TextAlignment="Center" Text="{x:Bind Name}"></TextBlock>
                                                <TextBlock Tag="0" Grid.Column="1" Padding="6" Margin="6" TextAlignment="Center" Text="{x:Bind Count}"></TextBlock>
                                                <Path 
                                                    Stroke="Gray"
                                                    StrokeThickness="0.5"
                                                    Data="M 0,0 L 1,0" 
                                                    Grid.ColumnSpan="3"
                                                    Margin="36,0,36,0"
                                                    Stretch="Fill" 
                                                    VerticalAlignment="Bottom"
                                                    StrokeDashArray="8,12"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>    
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                        
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        
    </Grid>
</Page>
